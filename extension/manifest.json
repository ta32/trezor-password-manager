{
  "name": "Trezor Password Manager",
  "description": "Really secure password manager using Trezor.",
  "version": "0.7.7",
  "author": "SatoshiLabs",
  "short_name": "Trezor Password Manager",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Open Trezor Password Manager app window."
    },
    "fill_login_form": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Fill login form with first fitting credentials."
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png",
    "512": "images/icon512.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{4b8f35f0-6235-448b-a2c2-028fa3e88d66}",
      "strict_min_version": "42.0"
    }
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Trezor Password Manager"
  },
  "background": {
    "persistent": true,
    "scripts": ["js/upload.js", "js/background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://apis.google.com/ https://connect.trezor.io/8/; object-src 'self'",
  "web_accessible_resources": [
    "html/chrome_oauth_receiver.html",
    "images/trezor.svg",
    "images/success.svg",
    "css/content_style.css"
  ],
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "identity",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite",
    "webRequest",
    "activeTab",
    "http://*/",
    "https://*/",
    "*://connect.trezor.io/8/*",
    "https://*.trezor.io/*",
    "https://*.dropbox.com/*",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken"
  ]
}
